@model IEnumerable<CartItemGroupByModel>
@*Generated by ScaffoldApp.*@

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="ClearCart">Clear Cart</a>
</p>

@if (TempData["Message"] is not null)
{
    <p class="text-primary">@TempData["Message"]</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalUnitPriceDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCount)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalUnitPriceDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCount)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-userId="@item.UserId">Delete</a>
                </td>
            </tr>
        }
        <tr>
            <td><b>Total:</b></td>
            <td>
                @Model.Sum(m => m.TotalUnitPrice).ToString("C2")
            </td>
            <td>
                @Model.Sum(m => m.TotalCount)
            </td>
        </tr>
    </tbody>
</table>

